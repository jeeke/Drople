<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:textViewStyle">@style/FontFamilyTextView</item>
        <item name="buttonStyle">@style/FontFamilyButton</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
    <style name="defaultButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_corner_round</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontFamilyTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FontFamilyButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
</resources>